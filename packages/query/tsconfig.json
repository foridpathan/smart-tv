{
  "compilerOptions": {
    "target": "ES5", // Chrome 30+ compatible target
    "lib": ["ES5", "ES2018", "DOM"], // ES2018 libs for Chrome 30+ support
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": ["src"]
}
