{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["build:bundle"]
    },
    "build:styles": {
      "outputs": ["dist/**"]
    },
    "build:bundle": {
      "outputs": ["dist/**"]
    },
    "dev": {
      "with": ["dev:styles", "dev:bundle"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:bundle": {
      "cache": false,
      "persistent": true
    }
  }
}
